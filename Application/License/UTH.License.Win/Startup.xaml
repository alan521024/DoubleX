<uth:UTHWindow x:Class="UTH.License.Win.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTH.License.Win"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:uth="http://uth.com/uthui"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=StartupModel}"
        Title="{Binding Title}" Height="10" Width="280" 
    UseNoneWindowStyle="True" ShowTitleBar="False" BorderThickness="0" 
        WindowStyle="None" ResizeMode="NoResize" WindowState="Normal" WindowStartupLocation="CenterScreen" WindowTransitionsEnabled="False"
               Opacity="1" AllowsTransparency="True" Background="Transparent">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <controls:MetroProgressBar Margin="0" Height="2" MinHeight="1" Width="200" Value="{Binding ProgressValue}" Foreground="{StaticResource AccentBaseColorBrush}" Background="Transparent"></controls:MetroProgressBar>
    </Grid>
</uth:UTHWindow>
