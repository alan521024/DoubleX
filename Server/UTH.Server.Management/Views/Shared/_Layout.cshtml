<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <title>@ViewData["Title"]-@(AppHelper.WebTitle)</title>
    @RenderSection("Heads", required: false)
    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/icon/iconfont.css" media="all" />
        <link rel="stylesheet" type="text/css" href="~/lib/webuploader/webuploader.css">
        <link type="text/css" rel="stylesheet" href="~/lib/layui/css/layui.css" media="all" />
        <link type="text/css" rel="stylesheet" href="~/css/style.css" media="all" />
    </environment>
    <environment exclude="Development">
        <link type="text/css" rel="stylesheet" href="~/icon/iconfont.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/lib/webuploader/webuploader.css"  asp-append-version="true">
        <link type="text/css" rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <link type="text/css" rel="stylesheet" href="~/lib/layui/css/layui.css" asp-append-version="true" />
    </environment>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="dxm-body">
        <div class="dxm-left">
            <div class="dxm-log">
                <a href="~/"><img src="~/images/dxm-logo2.png" /></a>
            </div>
            <div class="dxm-nav">
                <ul class="dxm-nav-inner">
                    <li>
                        <a href="~/" class="@((new string[] { "/","/home","/home/index"}).ToList().Contains(this.Context.Request.Path.ToString())?"active":"")" title="@(Lang.sysGongZuoTai)"><i class="iconfont icon-shouye2"></i></a>
                    </li>
                    <li>
                        <a href="~/home/list"><i class="iconfont icon-bangong3"></i></a>
                    </li>
                    <li>
                        <a href="~/user/account" title="@(Lang.userYongHuGuanLi)"><i class="iconfont icon-user5"></i></a>
                    </li>
                    <li>
                        <a href="~/home/form" title="@(Lang.sysGuanLiGongJu)"><i class="iconfont icon-shangye2"></i></a>
                    </li>
                    <li>
                        <a href="~/basics/app" class="@(this.Context.Request.Path.ToString().Contains("/app",StringComparison.OrdinalIgnoreCase)?"active":"")" title="@(Lang.sysXiTongGuanLi)"><i class="iconfont icon-xitong1"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="dxm-right">
            <div class="dxm-top">
                @RenderSection("Menus", required: false)
                <div class="dxm-tag">
                    <a href="javascript:;"><i class="iconfont icon-gongzuo10"></i></a>
                    <a href="javascript:;"><i class="iconfont icon-bangong3"></i><em class="badge">0</em></a>
                    <a href="javascript:;"><i class="iconfont icon-xiaoxi1"></i><em class="badge">101</em></a>
                    <a href="~/" title="@(User.Identity.Name)"><i class="iconfont icon-user3"></i></a>
                </div>
            </div>
            <div class="dxm-main">
                <div class="dxm-main-inner">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <environment include="Development">
        <script src="~/culture/@(WebHelper.GetCulture().ToLower()).js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/underscore/underscore.js"></script>
        <script src="~/lib/underscore/underscore.string.js"></script>
        <script src="~/lib/underscore-contrib/dist/underscore-contrib.js"></script>
        <script src="~/lib/webuploader/webuploader.js"></script>
        <script src="~/lib/layui/layui.all.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/controller.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/culture/@(WebHelper.GetCulture().ToLower()).js" asp-append-version="true"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/underscore/underscore.js" asp-append-version="true"></script>
        <script src="~/lib/underscore/underscore.string.js" asp-append-version="true"></script>
        <script src="~/lib/underscore-contrib/dist/underscore-contrib.js" asp-append-version="true"></script>
        <script src="~/lib/webuploader/webuploader.js"  asp-append-version="true"></script>
        <script src="~/lib/layui/layui.all.js" asp-append-version="true"></script>
        <script src="~/js/common.js" asp-append-version="true"></script>
        <script src="~/js/controller.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
